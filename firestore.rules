rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    match /users/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
    match /ihtiyaclar/{ihtiyacId} {
      allow read: if true;
      allow write: if request.auth != null && request.auth.uid == resource.data.userId;
      allow update, delete: if request.auth != null && get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'kurum';
    }
    match /teklifler/{teklifId} {
      allow read: if true;
      allow write: if request.auth != null && request.auth.uid == resource.data.gonulluId;
    }
  }
}